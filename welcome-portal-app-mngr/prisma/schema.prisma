generator client {
  provider = "prisma-client-js"
  binaryTargets = ["rhel-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model UserRequest {
  id        String   @id @default(cuid())
  name      String                             
  email     String                             
  area      String                           
  role      String
  team      String                          
  status    String
  createdAt DateTime @default(now())
}

model User {
  id        String   @id @default(cuid())       
  name      String                               
  email     String   @unique    
  team      String                
  area      String                               
  role      String                              
  createdAt DateTime @default(now())            
}

model AccessRequest {
  id              String         @id @default(cuid())
  userId          String                                       
  requestedAccess String                                     
  status          String
  team            String      
  createdAt       DateTime      @default(now())
}

model Computer {
  id              String   @id @default(cuid())
  serialNumber    String   @unique
  operatingSystem String
  createdAt       DateTime @default(now())
}

model ComputerRequest {
  id              String   @id @default(cuid())
  userId          String
  requestedSystem String
  team            String
  status          String
  createdAt       DateTime @default(now())
}

model ComputerAssignment {
  id          String   @id @default(cuid())
  computerId  String
  userId      String
  deliveredAt DateTime?
}

